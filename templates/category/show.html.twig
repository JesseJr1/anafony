{% block title %}
	{{category.title}}
{% endblock %}

{% block body %}
	<h1>{{category.title}}</h1>

	<div class="container">
		{% for product in category.products %}

			<div class="col">
				<h2>{{ product.name}}</h2>
				<p>{{product.description}}</p>
				<a href=" {{path('app_products') }} ">Voir</a>
			</div>
			show category

		{% endfor %}
	</div>

{% endblock %}
